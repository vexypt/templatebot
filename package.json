{
  "name": "bloxlab-bot",
  "version": "1.0.0",
  "description": "Scalable Discord Bot",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:ts": "node --watch -r ts-node/register -r tsconfig-paths/register src/index.ts",
    "canary": "ts-node -r dotenv/config -r tsconfig-paths/register src/bot.ts dotenv_path=.env.dev",
    "build": "tsc",
    "dev": "node --watch -r ts-node/register -r tsconfig-paths/register src/bot.ts"
  },
  "_moduleAliases": {
    "@config": "config",
    "@functions": "dist/functions",
    "@database": "dist/database",
    "@handlers": "dist/handlers",
    "@utils": "dist/functions"
  },
  "author": "vexy",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^14.25.1",
    "dotenv": "^16.6.1",
    "glob": "^10.5.0",
    "module-alias": "^2.2.3",
    "mongoose": "^8.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.9.0"
  }
}